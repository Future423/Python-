import time
def time_convert(sec):
    mins = sec // 60
    sec = sec % 60
    hour = mins // 60
    print("Time lapse = {0} : {1} : {2}". format(int(hour), int(mins), sec))
    
input("Press enter to start")
start_time =time.time()

input("press enter to stop")
end_time = time.time()

time_lapse = end_time - start_time
time_convert(time_lapse)
